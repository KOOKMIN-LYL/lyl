<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kookmin.lyl.module.order.mapper.OrderProductMapper">

    <select id="selectTop10Products" resultType="productStatistics">
        SELECT COUNT(*) AS CNT, PRODUCT_ID
        FROM ORDER_PRODUCT
        GROUP BY PRODUCT_ID
        ORDER BY CNT DESC
        LIMIT 10
    </select>

</mapper>